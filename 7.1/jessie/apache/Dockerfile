#
# NOTE: THIS DOCKERFILE IS GENERATED VIA "update.sh"
#
# PLEASE DO NOT EDIT IT DIRECTLY.
#这个镜像是基于debian:jessie镜像制作

FROM debian:jessie

# prevent Debian's PHP packages from being installed
# https://github.com/docker-library/php/pull/542
#阻止Debian默认php包的安装。将相关需要阻止的安装的包名写入no-debian-php文件中。
#RUN为docker中的指令，表示在镜像执行shell中的bash命令，
#set命令表示执行命令开始，-eux参数中e表示脚本执行有错误就终止，u表示遇到不存在的变量，报错终止脚本，
#-x表示多命令连续执行时，在运行结果前，先输出执行的命令。
RUN set -eux; \               
	{ \
		echo 'Package: php*'; \
		echo 'Pin: release *'; \
		echo 'Pin-Priority: -1'; \
	} > /etc/apt/preferences.d/no-debian-php

# dependencies required for running "phpize"
# (see persistent deps below)
#phpize是用来扩展php扩展模块的，通过phpize可以建立php的外挂模块
#ENV PHPIZE_DEPS定义一个环境变量，储存phpize需要的依赖库名
ENV PHPIZE_DEPS \
		autoconf \
		dpkg-dev \
		file \
		g++ \
		gcc \
		libc-dev \
		make \
		pkg-config \
		re2c

# persistent / runtime deps
#用apt-get安装phpize的依赖，CA证书，curl命令，XZ-utils解压缩工具，
#执行apt安装时注意加入-y --no-install-recommends，
#并且在安装完成后执行rm -rf /var/lib/apt/lists/* && apt-get clean命令，可以有效减小镜像的体积。

RUN apt-get update && apt-get install -y \
		$PHPIZE_DEPS \
		ca-certificates \
		curl \
		xz-utils \
	--no-install-recommends && rm -r /var/lib/apt/lists/*

#定义环境变量PHP_INI_DIR代表PHP的安装路径
#在php的安装路径建立一个配置文件conf.d
ENV PHP_INI_DIR /usr/local/etc/php
RUN mkdir -p $PHP_INI_DIR/conf.d

##<autogenerated>##
#安装apache2
RUN apt-get update \
	&& apt-get install -y --no-install-recommends \
		apache2 \
	&& rm -rf /var/lib/apt/lists/*
#定义一个常量APACHE_CONFDIR代表apache2配置文件的目录
ENV APACHE_CONFDIR /etc/apache2
ENV APACHE_ENVVARS $APACHE_CONFDIR/envvars

RUN set -ex \
	\
# generically convert lines like
#   export APACHE_RUN_USER=www-data
# into
#   : ${APACHE_RUN_USER:=www-data}
#   export APACHE_RUN_USER
# so that they can be overridden at runtime ("-e APACHE_RUN_USER=...")

#sed命令表示输入文件，选项r代表扩展型正则表达式，选项i代表直接编辑,s命令代表替换指定字符。
#sed的选项用“-”连接，命令用“'”连接，s紧跟的/为分割符。
#^表示正则匹配开始,如果在中括号里则表示不匹配该字符。$表示匹配结束，()表示一个表达式，[]表示匹配的字符范围，+表示匹配前面的表达式多次，{}表示匹配的长度
#.代表任意字符，*代表任意字符的个数为0或者多个，\1表示用户定义的表示式匹配到的第1组，\2表示用户定义的表达式匹配到的第2组
#\n代表换行或者回车
#所以's/^export ([^=]+)=(.*)$/: ${\1:=\2}\nexport \1/'中/^export ([^=]+)=(.*)$代表匹配模式，匹配$APACHE_ENVVARS中的内容
#/: ${\1:=\2}\nexport \1代表要替换成该内容。
#例如export  abc=12334 替换后就是：
#:${abc=12345}
#export abc

	&& sed -ri 's/^export ([^=]+)=(.*)$/: ${\1:=\2}\nexport \1/' "$APACHE_ENVVARS" \
	\
# setup directories and permissions 设置目录和权限
#读入环境变量文件$APACHE_ENVVARS中的设置，for语句表示将$APACHE_LOCK_DIR，$APACHE_RUN_DIR，$APACHE_LOG_DIR，/var/www/html所
#\代表的目录先删除（rm命令中r代表递归删除，v代表显示详细信息，f代表忽略不存在的文件），然后再重建该目录，并改变其权限修改为$APACHE_RUN_GROUP
#\的$APACHE_RUN_USER
	&& . "$APACHE_ENVVARS" \
	&& for dir in \
		"$APACHE_LOCK_DIR" \
		"$APACHE_RUN_DIR" \
		"$APACHE_LOG_DIR" \
		/var/www/html \
	; do \
		rm -rvf "$dir" \
		&& mkdir -p "$dir" \
		&& chown -R "$APACHE_RUN_USER:$APACHE_RUN_GROUP" "$dir"; \
	done

# Apache + PHP requires preforking Apache for best results
#a2enmod是属于apache2.2-common，可用用来开启apache的模块。一共有三种稳定的MPM（Multi-Processing Module，多进程处理模块）模式。
#/它们分别是prefork，worker和event模式我们这里禁用event，开启prefork模式。因为其性能最好。
RUN a2dismod mpm_event && a2enmod mpm_prefork

# logs should go to stdout / stderr
#设置apache日志文件，ln命令：建立链接（s创建符号链接而不是硬链接，f强行删除已经存在的目标文件，T将链接名当做普通文件）这里是将目录
#/ /dev/stderr链接到文件"$APACHE_LOG_DIR/error.log
RUN set -ex \
	&& . "$APACHE_ENVVARS" \
	&& ln -sfT /dev/stderr "$APACHE_LOG_DIR/error.log" \
	&& ln -sfT /dev/stdout "$APACHE_LOG_DIR/access.log" \
	&& ln -sfT /dev/stdout "$APACHE_LOG_DIR/other_vhosts_access.log"

# PHP files should be handled by PHP, and should be preferred over any other file type
#php文件由php处理，优先级高于其他文件。
#tee命令，输出重定向。在这里将echo输出的内容，写入docker-php.conf这个配置文件中。
#a2encon是apache命令，其可以配置/etc/apache2/下的conf-available选项
RUN { \
		echo '<FilesMatch \.php$>'; \
		echo '\tSetHandler application/x-httpd-php'; \
		echo '</FilesMatch>'; \
		echo; \
		echo 'DirectoryIndex disabled'; \
		echo 'DirectoryIndex index.php index.html'; \
		echo; \
		echo '<Directory /var/www/>'; \
		echo '\tOptions -Indexes'; \
		echo '\tAllowOverride All'; \
		echo '</Directory>'; \
	} | tee "$APACHE_CONFDIR/conf-available/docker-php.conf" \
	&& a2enconf docker-php


#定义php的外部依赖变量PHP_EXTRA_BUILD_DEPS
#定义php的外部配置变量PHP_EXTRA_CONFIGURE_ARGS
ENV PHP_EXTRA_BUILD_DEPS apache2-dev
ENV PHP_EXTRA_CONFIGURE_ARGS --with-apxs2
##</autogenerated>##

# Apply stack smash protection to functions using local buffers and alloca()
# Make PHP's main executable position-independent (improves ASLR security mechanism, and has no performance impact on x86_64)
# Enable optimization (-O2)
# Enable linker optimization (this sorts the hash buckets to improve cache locality, and is non-default)
# Adds GNU HASH segments to generated executables (this is used if present, and is much faster than sysv hash; in this configuration, sysv hash is also generated)
# https://github.com/docker-library/php/issues/272
#定义三个php的标志位

ENV PHP_CFLAGS="-fstack-protector-strong -fpic -fpie -O2"
ENV PHP_CPPFLAGS="$PHP_CFLAGS"
ENV PHP_LDFLAGS="-Wl,-O1 -Wl,--hash-style=both -pie"

#GPG就是用来加密数据与制作证书的一套工具
ENV GPG_KEYS A917B1ECDA84AEC2B568FED6F50ABC807BD5DCD0 528995BFEDFBA7191D46839EF9BA0ADA31CBD89E 1729F83938DA44E27BA0F4D3DBDB397470D12172

#这里定义php的版本，下载路径，以及ha值
ENV PHP_VERSION 7.1.16
ENV PHP_URL="https://secure.php.net/get/php-7.1.16.tar.xz/from/this/mirror" PHP_ASC_URL="https://secure.php.net/get/php-7.1.16.tar.xz.asc/from/this/mirror"
ENV PHP_SHA256="a5d67e477248a3911af7ef85c8400c1ba8cd632184186fd31070b96714e669f1" PHP_MD5=""

#这里 fetchDeps是定义的一个变量，其值等于wget
#if……then fi语句，属于linux命令，在这里表示如果gpg命令不存在，就赋值fetchDeps=wget dirmngr gnupg。如果存在就不执行以下语句
#其中/dev/null表示把/dev/null看作"黑洞". 它非常等价于一个只写文件. 所有写入它的内容都会永远丢失. 而尝试从它那儿读取内容则什么
#/也读不到. 然而, /dev/null对命令行和脚本都非常的有用.可以用于禁止标准输出，禁止标准错误。
RUN set -xe; \
	\
	fetchDeps=' \
		wget \
	'; \
	if ! command -v gpg > /dev/null; then \
		fetchDeps="$fetchDeps \
			dirmngr \
			gnupg \
		"; \
	fi; \
	apt-get update; \
	apt-get install -y --no-install-recommends $fetchDeps; \  #安装相关的命令wget dirmngr gnupg或者仅仅wget
	rm -rf /var/lib/apt/lists/*; \
	\
	mkdir -p /usr/src; \
	cd /usr/src; \
	\
	wget -O php.tar.xz "$PHP_URL"; \  #下载php源码包
	\
	if [ -n "$PHP_SHA256" ]; then \   #if [-n] 表示字符串的长度大于0时为真，即存在该字符串。
		echo "$PHP_SHA256 *php.tar.xz" | sha256sum -c -; \ #| linux命令的管道符，左边命令的输出会作为右边命令的输入
	fi; \                                                      #将哈希文件$PHP_SHA256和下载的php.tar.xz进行校验
	if [ -n "$PHP_MD5" ]; then \
		echo "$PHP_MD5 *php.tar.xz" | md5sum -c -; \     #进行md5校验
	fi; \
	\
	if [ -n "$PHP_ASC_URL" ]; then \                         #如果$PHP_ASC_URL不为空，则下载
		wget -O php.tar.xz.asc "$PHP_ASC_URL"; \
		export GNUPGHOME="$(mktemp -d)"; \                #设置环境变量GNUPGHOME，其中mktemp为创建临时目录（d代表目录），
		for key in $GPG_KEYS; do \                        #对$GPG_KEYS中的key进行gpg运算。                 
			gpg --keyserver ha.pool.sks-keyservers.net --recv-keys "$key"; \
		done; \
		gpg --batch --verify php.tar.xz.asc php.tar.xz; \ #验证下载的文件
		rm -rf "$GNUPGHOME"; \
	fi; \
	\
	apt-get purge -y --auto-remove -o APT::AutoRemove::RecommendsImportant=false $fetchDeps #用完后删除已安装包，不保留配置文件。

COPY docker-php-source /usr/local/bin/   #docker命令 复制文件docker-php-source 到目录/usr/local/bin/ ，该文件是一个命令，
                                         #该文件在该目录的上层可以找到，使用时，放在和dokerfile同一目录即可。
RUN set -eux; \
	\
	savedAptMark="$(apt-mark showmanual)"; \  #显示已经安装的包，请将其写入saveAptMark变量中
	apt-get update; \
	apt-get install -y --no-install-recommends \   #安装一些可能需要被依赖的包，以及php安装时需要的依赖包
		libcurl4-openssl-dev \
		libedit-dev \
		libsqlite3-dev \
		libssl-dev \
		libxml2-dev \
		zlib1g-dev \
		${PHP_EXTRA_BUILD_DEPS:-} \
	; \
	rm -rf /var/lib/apt/lists/*; \
	\
	export \
		CFLAGS="$PHP_CFLAGS" \  #表示用于 C 编译器的选项，指定头文件（.h文件）的路径，如：CFLAGS=-I/usr/include -I/path/include
		CPPFLAGS="$PHP_CPPFLAGS" \ #
		LDFLAGS="$PHP_LDFLAGS" \ # gcc 等编译器会用到的一些优化参数，也可以在里面指定库文件的位置
	; \
	docker-php-source extract; \ #在前面已经将docker-php-source命令复制到目录/usr/bin中，所以其可以直接执行。该命令主要是建目录，解压。
	                             #看/usr/src/php.tar.xz是否已经解压，如果还没有，就解压，并生成docker-extracted标志文件。
	cd /usr/src/php; \ #进入php目录
	gnuArch="$(dpkg-architecture --query DEB_BUILD_GNU_TYPE)"; \  #dpkg是一个安装、创建、移除和管理debian包的工具。查询DEB_BUILD_GNU_TYPE值
	debMultiarch="$(dpkg-architecture --query DEB_BUILD_MULTIARCH)"; \ #查询DEB_BUILD_MULTIARCH值，用于交叉编译
# https://bugs.php.net/bug.php?id=74125
	if [ ! -d /usr/include/curl ]; then \   #如果存在目录/usr/include/curl就执行
		ln -sT "/usr/include/$debMultiarch/curl" /usr/local/include/curl; \ #设立链接
	fi; \
	./configure \                                                            #编译参数设置
		--build="$gnuArch" \                                            #编译的价格如arm，x86等
		--with-config-file-path="$PHP_INI_DIR" \                         #编译文件的路径
		--with-config-file-scan-dir="$PHP_INI_DIR/conf.d" \                #编译扫描的目录
		\
		--disable-cgi \                                                     #禁止php的cgi。CGI已经是比较老的模式了，这几年都很少用了，效率低
		\
# --enable-ftp is included here because ftp_ssl_connect() needs ftp to be compiled statically (see https://github.com/docker-library/php/issues/236)
		--enable-ftp \                                   #开启ftp
# --enable-mbstring is included here because otherwise there's no way to get pecl to use it properly (see https://github.com/docker-library/php/issues/195)
		--enable-mbstring \
# --enable-mysqlnd is included here because it's harder to compile after the fact than extensions are (since it's a plugin for several extensions, not an extension in itself)
		--enable-mysqlnd \
		\
		--with-curl \     
		--with-libedit \ 
		--with-openssl \    
		--with-zlib \    
		\
# bundled pcre does not support JIT on s390x
# https://manpages.debian.org/stretch/libpcre3-dev/pcrejit.3.en.html#AVAILABILITY_OF_JIT_SUPPORT
		$(test "$gnuArch" = 's390x-linux-gnu' && echo '--without-pcre-jit') \
		--with-libdir="lib/$debMultiarch" \
		\
		${PHP_EXTRA_CONFIGURE_ARGS:-} \
	; \
	make -j "$(nproc)"; \
	make install; \
	find /usr/local/bin /usr/local/sbin -type f -executable -exec strip --strip-all '{}' + || true; \
	make clean; \
	cd /; \
	docker-php-source delete; \
	\
# reset apt-mark's "manual" list so that "purge --auto-remove" will remove all build dependencies
	apt-mark auto '.*' > /dev/null; \
	[ -z "$savedAptMark" ] || apt-mark manual $savedAptMark; \
	find /usr/local -type f -executable -exec ldd '{}' ';' \
		| awk '/=>/ { print $(NF-1) }' \
		| sort -u \
		| xargs -r dpkg-query --search \
		| cut -d: -f1 \
		| sort -u \
		| xargs -r apt-mark manual \
	; \
	apt-get purge -y --auto-remove -o APT::AutoRemove::RecommendsImportant=false; \
	\
	php --version; \
	\
# https://github.com/docker-library/php/issues/443
	pecl update-channels; \
	rm -rf /tmp/pear ~/.pearrc

COPY docker-php-ext-* docker-php-entrypoint /usr/local/bin/

ENTRYPOINT ["docker-php-entrypoint"]
##<autogenerated>##
COPY apache2-foreground /usr/local/bin/
WORKDIR /var/www/html

EXPOSE 80
CMD ["apache2-foreground"]
##</autogenerated>##
